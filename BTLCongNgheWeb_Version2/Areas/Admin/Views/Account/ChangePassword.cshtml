
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}
@section Link {
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Admin</a>
        </li>

        <li>
            <a href="#">Thông tin tài khoản</a>
        </li>
        <li class="active">Đổi mật khẩu</li>
    </ul><!-- /.breadcrumb -->
}
@using (Html.BeginForm("AddAction", "Employee"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("MatKhauCu", "Mật khẩu cũ", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Password("MatKhauCu", null, new { @class = "col-xs-10 col-sm-4" })
            </div>
        </div>
        @Html.ValidationMessage("matkhaucu")
        <div class="form-group">
            @Html.Label("MatKhauMoi", "Mật khẩu cũ", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Password("MatKhauMoi", null, new { @class = "col-xs-10 col-sm-4" })
            </div>
        </div>
        @Html.ValidationMessage("matkhaumoi")
        <div class="form-group">
            @Html.Label("Xacnhan", "Xác nhận mật khẩu", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Password("Xacnhan", null, new { @class = "col-xs-10 col-sm-4" })
            </div>
        </div>
        @Html.ValidationMessage("loimatkhauxacnhan")
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Lưu thay đổi" class="btn btn-info" />
            </div>
        </div>
    </div>
}