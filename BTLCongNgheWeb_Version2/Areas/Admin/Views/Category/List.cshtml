@model PagedList.PagedList<BTLCongNgheWeb_Version2.Entity.Category>
@using PagedList.Mvc;

@{
     ViewBag.Title = "List";
     Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">LIST CATEGORY</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<p>
    <a href="/Admin/Category/Add" class="btn btn-primary">CREATE NEW</a>
</p>
<div class="table-responsive table-bordered">
    <table class="table">
        <thead style="background-color: #d9edf7">
            <tr>
                <th>
                    @Html.DisplayName("ID")
                </th>
                <th>
                    @Html.DisplayName("Tên Loại Hàng Hóa")
                </th>
                <th>
                    @Html.DisplayName("Vị Trí")
                </th>
                <th>
                    @Html.DisplayName("Miêu Tả")
                </th>
                <th>
                    @Html.DisplayName("Kích Hoạt")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descriptions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actives)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("List", new { page }))
</div>