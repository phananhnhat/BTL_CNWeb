@model BTLCongNgheWeb_Version2.Entity.Customer
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_HomePage1.cshtml";
}
<div class="register_account">
    <div class="wrap">
        <h3 class="title">Quý khách vui lòng đăng ký tài khoản mua hàng để quản lý đơn hàng và đặt mua một cách dễ dàng, chuyên nghiệp nhất.</h3>
        <hr />
        @using (Html.BeginForm())
        {
            <div class="col_1_of_2 span_1_of_2">
