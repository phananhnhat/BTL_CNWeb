@model BTLCongNgheWeb_Version2.Entity.Customer
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}
<div class="wrap">
    <h3 class="title">Quý khách vui lòng đăng ký tài khoản mua hàng để quản lý đơn hàng và đặt mua một cách dễ dàng, chuyên nghiệp nhất.</h3>
    <hr />
    @using (Html.BeginForm("AddCustomer", "Login"))
    {
        <div class="col_1_of_login span_1_of_login">

            <div class="login-title">
                Thông tin đăng nhập
                <div class="comments-area">
                    <p>
                        <label>Name</label>
                        <span>*</span>
                        @Html.TextBoxFor(model => model.Login, new { @placeholder = "Tài khoản" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </p>
                    <p>
                        <label>Password</label>
                        <span>*</span>
                        @Html.PasswordFor(model => model.Password, new { @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </p> 
                    <div style="font-size:14px ;height: 65px;overflow: auto;padding: 5px;width: 95%;margin: 6px 0;border: 1px solid #ddd;">
                        Khi bạn truy cập vào trang web của chúng tôi có nghĩa là bạn đồng ý với các điều khoản này. Trang web có quyền thay đổi, chỉnh sửa, thêm hoặc lược bỏ bất kỳ phần nào trong Quy định và Điều kiện sử dụng, vào bất cứ lúc nào. Các thay đổi có hiệu lực ngay khi được đăng trên trang web mà không cần thông báo trước. Và khi bạn tiếp tục sử dụng trang web, sau khi các thay đổi về Quy định và Điều kiện được đăng tải, có nghĩa là bạn chấp nhận với những thay đổi đó.<br>
                        Quý khách vui lòng kiểm tra thường xuyên để cập nhật những thay đổi của chúng tôi.

                    </div>
                    <div>
                        <input type="checkbox" id="check-ok"> <label style="font-size:14px" for="check-ok">Đồng ý với điều khoản sử dụng</label>
                    </div>
                    <p>
                        <input type="submit" value="Submit" id="submit" />
                    </p>
                </div>
              
            </div>
           
        </div>
        <div class="col_1_of_login span_1_of_login">
            <div class="login-title">
                Thông tin cá nhân
                <div class="comments-area">
                    <p>
                        @Html.TextBoxFor(model => model.Name, new { @placeholder = "Họ và tên" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </p><p>
                        @Html.TextBoxFor(model => model.NumberPhone, new { @placeholder = "Số điện thoại" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </p><p>
                        @Html.TextBoxFor(model => model.Address, new { @placeholder = "Địa chỉ liên hệ" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </p><p>
                        @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </p><p>
                        @Html.TextBoxFor(model => model.Birthday, new { @placeholder = "Ngày sinh" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </p>
                </div>
            </div>
       
        </div>
   
    <div class="clear"></div>
    }
</div>
<script>
    $("#submit").hide();
    $("#check-ok").change(function () {
        if ($(this).is(':checked'))
            $("#submit").show();
        else
            $("#submit").hide();
    });
</script>


