@using BTLCongNgheWeb_Version2.Dao
@using BTLCongNgheWeb_Version2.Entity
@{
    CategoryDao dao = new CategoryDao();
    IEnumerable<Category> list = dao.ListCategory();
}

<div class="header-bottom">
    <div class="wrap">
        <!-- start header menu -->
        <ul class="megamenu skyblue">
            <li><a class="color1" href="/HomePage/HomePage">TRANG CHỦ</a></li>
            @foreach (Category category in list)
            {
                <li class="active grid">
                    <a class="color4" href="/HomePage/ListProductByCategory/@category.ID?soluong=6">@category.Name</a>
                </li>
            }
        </ul>
        <div class="clear"></div>
    </div>
</div>
